{
    "version": "3.8.3",
    "compilerOptions": {
        "downlevelIteration": true,
        "lib": ["es2015", "dom"],
        "target": "es5",
        "module": "common",
        "typeRoots": [
            "node_modules/@types",
            "release/@types"
        ],
        "baseUrl": "./",
        "paths": {},
        "rootDirs": ["./"],
        "outDir": "dist-app",
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "declaration": false,
        "sourceMap": true
    },
    "include": [
        "bin/*",
        "lib/**/*.ts"
    ],
    "exclude": [
        "node_modules"
    ]
}
